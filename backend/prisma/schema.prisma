generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id              Int      @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String   @unique
  age             Int
  profilePicture  String?  // URL to profile picture
}